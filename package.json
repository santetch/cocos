{
  "name": "cocos-backend",
  "version": "0.0.1",
  "description": "cocos backend repository",
  "author": "santetchdev@gmail.com",
  "private": true,
  "license": "MIT",
  "packageManager": "yarn@4.5.3",
  "scripts": {
    "build": "nest build",
    "build:swagger": "ts-node ./src/common/swagger/generate-metadata.ts",
    "build:docker": "docker build --build-arg STAGE=LOCAL -f ./Dockerfile -t cocos-backend-repository .",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "migration:gen": "yarn build && yarn typeorm migration:generate ./src/common/migration/${1:+/$1} -d ./src/config/postgres.ds.migration.provider.ts",
    "migration:run": "yarn typeorm migration:run -d ./src/config/postgres.ds.migration.provider.ts",
    "migration:revert": "yarn typeorm migration:revert -d ./src/config/postgres.ds.migration.provider.ts",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:docker": "docker run -it --rm cocos-backend-repository",
    "start:docker:w": "docker run -it --rm cocos-backend-repository /bin/sh",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "axios": "^1.6.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "decimal.js": "^10.6.0",
    "dotenv": "^16.4.5",
    "pg": "^8.16.3",
    "pg-mem": "^3.0.5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "testcontainers": "^11.5.1",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@types/pg": "^8",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": ["<rootDir>/src", "<rootDir>/test"],
    "testRegex": ".*\\.(test|spec)\\.(js|ts|jsx|tsx)$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=20.11.1"
  }
}
